<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchViewHeroes"
        android:layout_width="@dimen/margin_padding_size_zero"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/margin_padding_size_xsmall"
        android:layout_marginHorizontal="@dimen/margin_padding_size_xsmall"
        app:iconifiedByDefault="false"
        app:queryHint="@string/search_view_hero"
        android:background="@color/light_blue"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/HeroRecyclerList"
        android:layout_width="@dimen/margin_padding_size_zero"
        android:layout_height="@dimen/margin_padding_size_zero"
        android:layout_marginTop="@dimen/margin_padding_size_xsmall"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchViewHeroes"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/hero_list_item" />

</androidx.constraintlayout.widget.ConstraintLayout>

